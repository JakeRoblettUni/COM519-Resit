<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/metadata", {
        title: "Register"
    }); %>

    <script src="/static/scripts/register.js"></script>
</head>
<body class="center-content">
    <div class="modal-window">
        <h1 class="mb-4">Register</h1>

        <div id="error" class="alert alert-danger hidden"></div>

        <form onsubmit="onRegisterSubmit(event)">
            <div class="mb-3">
                <label class="form-label" required>Username</label>
                <input type="text" class="form-control" id="username">
            </div>
            <div class="mb-3">
                <label class="form-label" required>Email Address</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="mb-4">
                <label class="form-label" required>Password</label>
                <input type="password" class="form-control" id="password">
            </div>
            <button type="submit" class="btn btn-primary">Register <span id="loading" class="spinner-border spinner-border-sm hidden" style="margin-left: 0.3rem;"></span></button>
            <span style="margin-left: 1.0rem;">Already have an account? <a href="/login">Login</a></span>
        </form>
    </div>
</body>
</html>